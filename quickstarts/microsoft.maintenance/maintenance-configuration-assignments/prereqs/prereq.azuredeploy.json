{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]",
        "metadata": {
          "description": "Location for all resources."
        }
      }
    },
    "variables": {
      "maintenanceAssignmentName": "[concat(uniqueString(resourceGroup().id),'maintenance')]"
    },
    "resources": [
      {
        "comments": "Need to add some comment here",
        "type": "Microsoft.Maintenance/configurationAssignments",
        "name": "[variables('maintenanceAssignmentName')]",
        "apiVersion": "2023-04-01",
        "location": "[parameters('location')]",
        "tags": {
          "displayName": "Microsoft Maintenance"
        },
        "sku": {
          "name": "Standard_LRS"
        },
        "kind": "Maintenance",
        "properties": {}
      }
    ]
  }
  